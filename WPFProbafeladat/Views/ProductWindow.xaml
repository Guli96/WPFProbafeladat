<Window x:Class="WPFProbafeladat.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProbafeladat.Views"
        mc:Ignorable="d"
        Title="Termék" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Content="Cikkszám:"/>
        <TextBox Grid.Row="0" x:Name="CodeTextBox" Margin="0,25,0,0"/>

        <Label Grid.Row="1" Content="Név:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" Margin="0,35,0,0"/>

        <Label Grid.Row="2" Content="Leírás:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="2" x:Name="DescriptionTextBox" Margin="0,35,0,0"/>

        <Label Grid.Row="3" Content="Ár:" Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" x:Name="PriceTextBox" Margin="0,35,0,0"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Mentés" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Mégse" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
