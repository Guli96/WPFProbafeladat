<Window x:Class="WPFProbafeladat.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProbafeladat"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="UsernameTextBox" Margin="20" Width="500"></TextBox>
        <PasswordBox x:Name="PasswordBox" Width="500"></PasswordBox>
        <Button x:Name="LoginButton" Margin="20" Width="300" Click="LoginButton_Click" IsDefault="True">Login</Button>
    </StackPanel>
</Window>
