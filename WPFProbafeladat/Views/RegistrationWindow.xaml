<Window x:Class="WPFProbafeladat.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProbafeladat.Views"
        mc:Ignorable="d"
        Title="Regisztráció" Height="450" Width="350">
    <StackPanel Margin="20" Width="Auto">
        <Label>Felhasználónév</Label>
        <TextBox x:Name="UsernameTextBox"></TextBox>
        <Label>Jelszó</Label>
        <PasswordBox x:Name="PasswordBox"></PasswordBox>
        <Button x:Name="RegisterButton" Margin="20" Width="Auto" Click="RegisterButton_Click">Regisztráció</Button>
    </StackPanel>
</Window>
